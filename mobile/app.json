{
  "expo": {
    "name": "mobile",
    "slug": "mobile",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./src/assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "plugins": [
      [
        "expo-background-fetch",
        {
          "startOnBoot": false
        }
      ],
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "Pozwól aplikacji na dostęp do lokalizacji aby nagrywać trasy w tle.",
          "locationAlwaysPermission": "Pozwól aplikacji na dostęp do lokalizacji aby nagrywać trasy w tle.",
          "locationWhenInUsePermission": "Pozwól aplikacji na dostęp do lokalizacji aby nagrywać trasy."
        }
      ]
    ],
    "ios": {
      "supportsTablet": true
    },
    "android": {
      "permissions": [
        "ACCESS_BACKGROUND_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION",
        "WAKE_LOCK",
        "POST_NOTIFICATIONS"
      ],
      "adaptiveIcon": {
        "foregroundImage": "./src/assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.bezi19.mobile",
      "foregroundService": {
        "locationServiceType": "location",
        "notificationTitle": "Nagrywanie trasy",
        "notificationColor": "#386641"
      }
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    }
  }
}
